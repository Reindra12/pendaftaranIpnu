<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".DetailSurat.DetailSuratActivity">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar"
        style="?attr/actionBarDivider"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="2"
        android:background="@color/white"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_scrollFlags="scroll|enterAlways|snap"
        app:title="Ditail Surat"
        app:titleTextColor="@color/Titele_AA_Light" />

    <ImageView
        android:id="@+id/imgdetailsurat"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:scaleType="centerCrop"
        android:src="@drawable/a"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/toolbar"
        />

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="13dp"
        android:elevation="10dp"
        android:outlineAmbientShadowColor="@color/blackSoft"
        app:cardCornerRadius="5dp"
        app:layout_constraintTop_toBottomOf="@+id/imgdetailsurat">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="8dp"
                android:weightSum="2">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="10dp"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/tvnomor"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="3dp"
                        android:fontFamily="@font/bariol_bold"
                        android:paddingBottom="3dp"
                        android:text="KB-12"
                        android:textAppearance="?android:textAppearanceSmall"
                        android:textColor="#000"
                        android:textSize="14sp" />


                    <TextView
                        android:id="@+id/tvtanggal"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="3dp"
                        android:fontFamily="@font/bariol_regular"
                        android:paddingBottom="3dp"
                        android:text="2022-12-12"
                        android:textAppearance="?android:textAppearanceSmall"
                        android:textColor="@color/content_text_color"
                        android:textSize="12sp" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="end"
                    android:layout_marginEnd="10dp"
                    android:layout_weight="1"
                    android:gravity="end"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/tv_sifat"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="3dp"
                        android:fontFamily="@font/bariol_bold"
                        android:paddingBottom="5dp"
                        android:text="Alamat"
                        android:textAppearance="?android:textAppearanceSmall"
                        android:textColor="#000"
                        android:textSize="14sp" />


                    <TextView
                        android:id="@+id/tv_perihal"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/bariol_regular"
                        android:gravity="center"
                        android:paddingBottom="3dp"
                        android:text="Seleksi Tertulis Offline"
                        android:textColor="#147819"
                        android:textSize="12dp" />


                </LinearLayout>

            </LinearLayout>


            <View
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:layout_marginTop="5dp"
                android:layout_marginBottom="5dp"
                android:layout_marginStart="10dp"
                android:background="@color/nav_bar_color" />

            <TextView

                android:layout_marginStart="10dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/futura_medium"
                android:layout_marginBottom="10dp"
                android:textColor="@color/blackSoft"
                android:textSize="15sp"
                android:text="Diskripsi" />

            <TextView
                android:id="@+id/tvisi"
                android:layout_marginStart="10dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/poppins"
                android:layout_marginBottom="10dp"
                android:textSize="12sp"
                android:textColor="@color/content_text_color"

                android:text="isi surat" />

        </LinearLayout>

    </androidx.cardview.widget.CardView>
</androidx.constraintlayout.widget.ConstraintLayout>